<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="losbibis.xia">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/xia_icone"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme_los_bibis">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".A_propos"/>
        <activity android:name=".Menu_Principale"/>

        <activity android:name=".DiceActivity" />
        <activity android:name=".Modification_item" />
        <activity android:name=".Shopping" />
    </application>

</manifest>